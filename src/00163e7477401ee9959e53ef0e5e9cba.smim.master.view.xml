<mvc:View
        controllerName="com.modekz.aqo.controller.Master"
        xmlns="sap.m"
        xmlns:semantic="sap.f.semantic"
        xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
            id="masterPage"
            preserveHeaderStateOnScroll="true"
            toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                    id="masterPageTitle"
                    text="{masterView>/title}"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                    id="list"
                    width="auto"
                    class="sapFDynamicPageAlignContent"
                    items="{
					path: '/AqoOptions',
					sorter:
					[ {
						path: 'PACKAGE_ID',
						group: true
					},
					{
						path: 'OPTION_ID',
						descending: false
					} ],
					groupHeaderFactory: '.createGroupHeader'
				    }"
                    busyIndicatorDelay="{masterView>/delay}"
                    noDataText="{masterView>/noDataText}"
                    mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                    growing="true"
                    growingScrollToLoad="true"
                    updateFinished=".onUpdateFinished"
                    selectionChange=".onSelectionChange"
                    growingThreshold="40">
                <infoToolbar>
                    <Toolbar
                            active="true"
                            id="filterBar"
                            visible="{masterView>/isFilterBarVisible}"
                            press=".onOpenViewSettings">
                        <Title
                                id="filterBarLabel"
                                text="{masterView>/filterBarLabel}"/>
                    </Toolbar>
                </infoToolbar>
                <headerToolbar>
                    <OverflowToolbar id="id_here">
                        <SearchField
                                id="searchField"
                                showRefreshButton="true"
                                tooltip="{i18n>masterSearchTooltip}"
                                search=".onSearch"
                                width="auto">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                        minWidth="150px"
                                        maxWidth="240px"
                                        shrinkable="true"
                                        priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>

                        <ToolbarSpacer/>
                        <Button
                                id="sortButton"
                                press=".onOpenViewSettings"
                                icon="sap-icon://sort"
                                type="Transparent"/>
                        <Button
                                id="filterButton"
                                press=".onOpenViewSettings"
                                icon="sap-icon://filter"
                                type="Transparent"/>
                        <Button
                                id="groupButton"
                                press=".onOpenViewSettings"
                                icon="sap-icon://group-2"
                                type="Transparent"/>

                        <ToolbarSpacer width="1em"/>
                        <Button
                                press=".onOptionCreate"
                                icon="sap-icon://create-form"
                                type="Transparent"
                                enabled="{appView>/IS_DEV}"/>
                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                            type="Navigation"
                            press=".onSelectionChange"
                            title="{PACKAGE_ID} - {OPTION_ID}"
                            number="{DESCRIPTION}"
                            numberUnit=""
                            intro="">
                        <attributes>
                            <ObjectAttribute
                                    text="{CREATED_NAME_TEXT} ({CREATED_UNAME})"/>
                            <ObjectAttribute
                                    text="{MAINPROGRAM} - {
                                        path: 'CREATED_DATE',
                                        formatter: '.formatter.toLocaleDate'
                                    }"/>
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>