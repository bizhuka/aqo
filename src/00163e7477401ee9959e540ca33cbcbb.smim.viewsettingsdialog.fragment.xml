<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <ViewSettingsDialog
            id="viewSettingsDialog"
            confirm=".onConfirmViewSettingsDialog">
        <sortItems>
            <ViewSettingsItem
                    text="{i18n>sortByOptionId}"
                    key="OPTION_ID"
                    selected="true"/>
            <ViewSettingsItem
                    text="{i18n>sortByPackage}"
                    key="PACKAGE_ID"/>
            <ViewSettingsItem
                    text="{i18n>sortByUser}"
                    key="CREATED_UNAME"/>
            <ViewSettingsItem
                    text="{i18n>sortByProgram}"
                    key="MAINPROGRAM"/>
        </sortItems>

        <filterItems>
            <ViewSettingsFilterItem
                    id="filterItems"
                    text="{i18n>masterFilterName}"
                    multiSelect="false">
                <items>
                    <ViewSettingsItem
                            text="{i18n>filterLT30}"
                            key="LT30"/>
                    <ViewSettingsItem
                            text="{i18n>filterLT90}"
                            key="LT90"/>
                </items>
            </ViewSettingsFilterItem>
        </filterItems>

        <groupItems>
            <ViewSettingsItem
                    text="{i18n>groupByPackageId}"
                    key="PACKAGE_ID"
                    selected="true"/>
            <ViewSettingsItem
                    text="{i18n>groupByUser}"
                    key="CREATED_UNAME"/>
        </groupItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>